<?xml version="1.0" encoding="utf-8" ?>
<Defs>

<!--=============== IRON ORE ====================-->
  <ThingDef ParentName="ResourceBase">
    <defName>IronOre</defName>
    <label>iron ore</label>
    <description>Impure iron mixed with rock.</description>
    <graphicData>
      <texPath>Things/Items/Ores/ore_iron</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Metal_Drop</soundInteract>
    <soundDrop>Metal_Drop</soundDrop>
    <stackLimit>9999</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases>
      <MarketValue>0.1</MarketValue>
      <MaxHitPoints>300</MaxHitPoints>
      <Mass>0.1</Mass>
    </statBases>
	<thingCategories>
      <li>Items</li>
    </thingCategories>
    <tradeTags>
      <li>ResourcesRaw</li>
	  <li>Ore</li>
	  <li>Metallurgy</li>
	  <li>Iron</li> 
    </tradeTags>
    <drawGUIOverlay>true</drawGUIOverlay>
    <techLevel>Neolithic</techLevel>
  </ThingDef>
  
<!--=============== COAL ORE ====================-->
 <ThingDef ParentName="ResourceBase">
    <defName>CoalOre</defName>
    <label>coal ore</label>
    <description>Rough coal chunks cut from rock.Dirty, not good for burning, but can still burn.</description>
    <graphicData>
      <texPath>Things/Items/Ores/ore_coal_raw</texPath>
      <graphicClass>Graphic_Single</graphicClass>
    </graphicData>
    <resourceReadoutPriority>Middle</resourceReadoutPriority>
    <soundInteract>Stone_Drop</soundInteract>
    <soundDrop>Stone_Drop</soundDrop>
    <stackLimit>9999</stackLimit>
    <useHitPoints>true</useHitPoints>
    <statBases> 
      <MarketValue>1</MarketValue>
      <MaxHitPoints>150</MaxHitPoints>	  
      <Mass>0.2</Mass>
      <Flammability>2.0</Flammability>	  
    </statBases>
	<thingCategories>
      <li>Items</li>
    </thingCategories>
	<tradeTags>
      <li>ResourcesRaw</li>
	  <li>Ore</li>
	  <li>Metallurgy</li>
	  <li>Coal</li> 
    </tradeTags>
    <drawGUIOverlay>true</drawGUIOverlay>
    <techLevel>Neolithic</techLevel>
  </ThingDef>
  
</Defs>
